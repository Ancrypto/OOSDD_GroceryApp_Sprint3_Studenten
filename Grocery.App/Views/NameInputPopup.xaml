<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Grocery.App.Views.NameInputPopup"
    Size="300,200"
    Color="White">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Naam van de lijst:" FontSize="Medium" />
        <Entry x:Name="NameEntry" Placeholder="Bijv. Weekend boodschappen" />
        <Button Text="Opslaan" Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</toolkit:Popup>